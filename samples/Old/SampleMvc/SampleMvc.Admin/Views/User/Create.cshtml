@model SampleMvc.Admin.Models.UserViewModel
@{
    ViewData["Title"] = "Create User";
}
<h2>@ViewData["Title"]</h2>
<form method="post">
    <div class="form-group row">
        <label asp-for="IsActive" class="col-form-label col-md-2"></label>
        <div class="col-md-10">
            <input type="checkbox" asp-for="IsActive" class = "form-control" />
            <span asp-validation-for="IsActive" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="LastName" class="col-form-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="LastName" type="text" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="FirstName" class="col-form-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="FirstName" type="text" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-form-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Email" type="text" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="UserName" class="col-form-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="UserName" type="text" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
    </div>

     <input type="submit" value="Save" class="btn btn-primary" />
</form>
<div>
    <a asp-action="Index">Back to List</a>
</div>
